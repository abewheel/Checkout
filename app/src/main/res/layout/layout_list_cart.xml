<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/itemTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/itemIV"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:text="Example Item"/>

    <TextView
        android:id="@+id/itemPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/itemIV"
        android:layout_below="@+id/itemTitleTV"
        android:text="$0.00"/>

    <TextView
        android:id="@+id/itemQuantityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemPriceTV"
        android:layout_toLeftOf="@+id/removeItemIB"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:text="x1"/>

    <ImageButton
        android:id="@+id/removeItemIB"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/itemIV"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/x"/>

</RelativeLayout>